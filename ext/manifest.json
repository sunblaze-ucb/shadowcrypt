{
	"manifest_version": 2,
	"name": "ShadowCrypt",
	"version": "0.3.1",

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["shadowcrypt.js"],
			"run_at": "document_start",
			"all_frames": true
		}
	],

	"background": {
		"scripts": ["background.js"]
	},

	"options_page": "options.html",
	"permissions": ["storage"],
	"web_accessible_resources": [
		"Spritesheet-01.png"
	]
}
